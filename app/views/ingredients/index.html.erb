<div>
  <div>
    <h1>
      List of all ingredients
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new ingredient
    </h2>

    <form action="/insert_ingredient" method="post">
      <div>
        <label for="user_ingredients_content_box">
          User ingredients content
        </label>

        <input type="text" id="user_ingredients_content_box" name="query_user_ingredients_content">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create ingredient
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User ingredients content
        </th>

        <th>
          Role
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_ingredients.each do |an_ingredient| %>
      <tr>
        <td>
          <%= an_ingredient.id %>
        </td>

        <td>
          <%= an_ingredient.user_ingredients_content %>
        </td>

        <td>
          <%= an_ingredient.role %>
        </td>

        <td>
          <%= an_ingredient.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_ingredient.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/ingredients/<%= an_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
